<%= form_for Photo.new do |f| %>
  <h2> Add New Photo </h2>
  <div class="form-group">
    Caption : <%= f.text_field :caption, required: true %>
  </div>
  <div class="form-group">
    Image : <%= f.file_field :image, required: true %>
  </div>
  <div class="form-group">
    Photo Owner : <%= f.text_field :owner, required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :album_id, value: @album_id, class:'d-none'%>
  </div>
  <br>
  <div class="text-center">
    <%= f.submit 'Add Photo', class: 'btn btn-primary' %>
  </div>
<% end %>